{
    "zoom": {
        "lower_bound": 0.1,
        "upper_bound": 32,
        "default": 1,
        "commands": {
            "windows": "",
            "macos": "",
            "gnome": "gsettings set org.gnome.desktop.a11y.magnifier mag-factor"
        }
    },
    "text_scaling_factor": {
        "lower_bound": 0.5,
        "upper_bound": 3,
        "default": 1,
        "commands": {
            "windows": "",
            "macos": "",
            "gnome": "gsettings set org.gnome.desktop.interface text-scaling-factor"
        }
    },
    "enable_animation": {
        "default": true,
        "commands": {
            "windows": "",
            "macos": "",
            "gnome": "gsettings set org.gnome.desktop.interface enable-animations"
        }
    }
}
